<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:id="@+id/location_edit_item"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout android:layout_height="match_parent" android:layout_width="match_parent"
        tools:ignore="UselessParent" android:id="@+id/location_edit_item_wrap">
    <EditText
        android:id="@+id/location_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textNoSuggestions"
        tools:ignore="LabelFor" android:layout_weight = "1"/>
    <ImageView
        android:layout_height="40dp"
        android:layout_width="40dp"
        android:scaleType="fitXY" app:srcCompat="@drawable/drag_n_drop_indicator"
        tools:ignore="ContentDescription" android:id="@+id/location_drag_handle"/>
    </LinearLayout>
</LinearLayout>